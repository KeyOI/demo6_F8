<div class="mt-5">
    <h2>Chỉnh sủa khóa học</h2>
    {{course._id}}
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
  
  <div class="form-group">
    <label for="name-course">tên khóa học</label>
    <input type="text " name="name" class="form-control" id="name-course" value="{{course.name}}"      >
   </div> 
   <div class="form-group">
    <label for="name-course">mô tả</label>
    <input type="text " name="description" class="form-control" id="name-course" value="{{course.description}}"      >
   </div>  
   <div class="form-group">
    <label for="name-course">video id</label>
    <input type="text " name="videoId" class="form-control" id="name-course" value="{{course.videoId}}"      >
   </div>  
  <button type="submit" class="btn btn-primary">tạo khóa học</button>
</form>
</div>